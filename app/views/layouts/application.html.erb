<!DOCTYPE html>
<html>
  <head>
    <title>Scramoney</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag 'scramoney_icon.jpeg' %>
    <%= stylesheet_link_tag "custom", media: "all" %>
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
    <script src="https://kit.fontawesome.com/6d85e2e583.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <% if current_user.present? %>
    <%= render 'shared/header', user: @user %>
  <% end %>
  <div id="flash">
    <%= render 'shared/flash_messages' %>
  </div>
  <div class="money-container">
    <div class="col-md-8 offset-md-2">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </div>
  <div class="mb-4"></div>
  <% if logged_in? %>
    <%= render partial: 'shared/footer', family: @family %>
  <% end %>
  <%= turbo_frame_tag 'modal' %>
  </body>
</html>
